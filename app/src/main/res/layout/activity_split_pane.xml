<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary">
        <Spinner
            android:visibility="gone"
            android:id="@+id/spinner_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_custom"
            style="@style/mySpinnerStyle"
            android:prompt="@string/spinner_title"
            android:spinnerMode="dialog" />
        <Spinner
            android:visibility="gone"
            android:id="@+id/spinner_noimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/mySpinnerStyle"
            android:entries="@array/spinner" />
    </android.support.v7.widget.Toolbar>
    <!-- each frame layout will have weight set programatically,
        however we want to ensure that they have some size on first pass, so set width to 10dp -->
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/activity_split_pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/activity_split_pane_left_pane"
        android:layout_width="10dp"
        android:layout_height="wrap_content">

    </FrameLayout>
        <ImageView
            android:id="@+id/activity_split_pane_divider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/slider_bar" />
        <FrameLayout
            android:id="@+id/activity_split_pane_right_pane"
            android:layout_width="10dp"
            android:layout_height="wrap_content">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/left"
            android:layout_height="50dp"
            />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:scrollbars="horizontal">
            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/qno"
                android:choiceMode="singleChoice"
                android:listSelector="#02fff6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </it.sephiroth.android.library.widget.HListView>
        </ScrollView>

        <ImageButton
            android:id="@+id/right"
            android:background="@drawable/right"
            android:layout_width="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>